extends layout

block content
  .container
    h1.page-header 예약 목록
    
    table.table.table-striped.table-bordered
      thead
        tr
          th 도시
          th 제목
          th 예약
          th 손님
          th
      tbody
        each room in rooms
          tr
            td= room.city
            td= room.name
            if (room.reservation)
                td reservation
                td= room.guestName
                td 
                  if (!room.permission)
                    a.btn.btn-default(href='/permition/#{room.id}') permition
                    a.btn.btn-default(href='/deny/#{room.id}') refuse
                  else
                    a.btn.btn-default.disabled(href='/permition/#{room.id}') permition
                    a.btn.btn-default(href='/deny/#{room.id}') refuse
            else
                td reservation possible
              